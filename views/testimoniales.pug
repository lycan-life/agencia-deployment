extends ./layouts/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Las experiencias de los clientes
        include ./layouts/testimonios
        .row
            .col-12
                if apro
                    p.text-center.alert-success #{alerta}
                else
                    p.text-center.alert-danger #{alerta}

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales", method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder = "Tu nombre", name="nombre",class="form-control", value=nombre)
                        .form-group
                            label(for="correo") Correo
                            input#correo(type="email", placeholder = "Tu correo", name="correo",class="form-control",value = correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje",class="form-control",rows= 3)= mensaje
                            
                        input.btn.btn-block.btn-success(type="submit")